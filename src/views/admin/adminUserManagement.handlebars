<h1>Gesti√≥n de Usuarios</h1>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
                <form action="/admin/users/{{this._id}}" method="post">
                    <select name="role">
                        <option value="user" {{#ifCond this.role '==' 'user'}}selected{{/ifCond}}>Usuario</option>
                        <option value="admin" {{#ifCond this.role '==' 'admin'}}selected{{/ifCond}}>Administrador</option>
                        <option value="premium" {{#ifCond this.role '==' 'premium'}}selected{{/ifCond}}>Premium</option>
                    </select>
                    <button type="submit">Modificar</button>
                </form>
                <form action="/admin/users/delete/{{this._id}}" method="post">
                    <button type="submit">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a href="/admin">Volver al Panel</a>